<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/windowBgColor</item>
    </style>

    <style name="WindowBottomAnim">
        <item name="android:windowEnterAnimation">@anim/window_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/window_bottom_slide_out</item>
    </style>

    <style name="TagButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/selector_tag</item>
        <item name="android:textSize">14dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/c_white_n_black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
